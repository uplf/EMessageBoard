/* 页面主容器 */
.container {
  padding: 20px;
}

/* 标题样式 */
.section-title {
  font-size: 20px;
  font-weight: bold;
  margin-bottom: 10px;
}

/* 用户信息部分 */
.user-info {
  margin-top: 20px;
}

/* 用户信息头部 */
.user-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

/* 用户账号和状态 */
.user-account {
  font-size: 16px;
  font-weight: bold;
}

.status {
  font-size: 14px;
}

.status-normal {
  color: #2d8cf0;
}

.status-disabled {
  color: #ff4d4f;
}

/* 分割线 */
.divider {
  height: 1px;
  background-color: #e5e5e5;
  margin: 10px 0;
}

/* 详情项 */
.detail-item {
  font-size: 14px;
  color: #333;
  margin: 10px 0;
}

/* 链接文字 */
.link-text {
  color: #1aad19;
  text-decoration: underline;
}

/* 编辑文字 */
.edit-text {
  color: #2d8cf0;
  font-size: 14px;
  cursor: pointer;
}

/* 操作按钮 */
.actions {
  margin-top: 20px;
}

.action-button {
  width: 100%;
  padding: 10px;
  margin-bottom: 10px;
  font-size: 16px;
  border-radius: 5px;
}

.primary {
  background-color: #1aad19;
  color: #fff;
}

.warn {
  background-color: #ff4d4f;
  color: #fff;
}

/* 自定义按钮的样式 */
button {
  background-color: #f5f5f5;
  border: none;
  color: #333;
  font-size: 14px;
  padding: 10px 0;
  text-align: center;
  border-radius: 5px;
}

button:active {
  background-color: #e5e5e5;
}


