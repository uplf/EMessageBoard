/* 页面容器 */
.page-container {
  padding: 15px;
  background-color: #f4f6f9; /* 更柔和的背景色 */
}

/* 功能栏 */
.section {
  margin-bottom: 20px;
  padding: 15px;
  background-color: #ffffff;
  border-radius: 10px; /* 圆角效果 */
  box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); /* 更柔和的阴影 */
}
.title-text {
  font-size: 16px;
  color: #333;
}

/* 筛选条件 */
.filter-toggle {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 14px;
  color: #007aff;
  cursor: pointer;
}

.filter-text {
  font-size: 14px;
  color: #007aff;
}

.picker {
  margin-top: 10px;
  padding: 12px;
  background-color: #fff;
  border: 1px solid #e6e6e6;
  border-radius: 5px;
}

.input-field {
  width: 100%;
  padding: 12px;
  margin-top: 10px;
  border: 1px solid #e6e6e6;
  border-radius: 5px;
  background-color: #fff;
}

.checkbox {
  margin-top: 10px;
}

.submit-btn, .reset-btn {
  width: 100%;
  padding: 12px;
  margin-top: 20px;
  background-color: #007aff;
  color: white;
  border-radius: 5px;
  font-size: 16px;
}

.submit-btn:hover, .reset-btn:hover {
  background-color: #005bb5;
}

/* 列表项 */
.item-container {
  padding: 15px;
  background-color: #fff;
  border-radius: 8px;
  box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
  margin-bottom: 15px;
}

.item-text {
  font-size: 14px;
  color: #333;
}

.item-status {
  display: flex;
  flex-direction: column;
  margin-top: 10px;
}

.theme-text {
  font-size: 16px;
  color: #333;
  font-weight: bold;
}

.progress-text {
  font-size: 14px;
  color: #999;
}

.solution-text {
  font-size: 14px;
  color: #007aff;
}

.divLine, .divLine_b {
  height: 1px;
  background-color: #e6e6e6;
  margin: 12px 0;
}

/* 交互按钮 */
.submit-btn, .reset-btn {
  width: 100%;
  padding: 15px;
  margin-top: 25px;
  background-color: #007aff;
  color: white;
  border-radius: 8px;
  font-size: 18px;
  cursor: pointer;
}

.submit-btn:hover, .reset-btn:hover {
  background-color: #005bb5;
}

button {
  padding: 10px 20px;
  margin: 10px 0;
  background-color: #007aff;
  color: white;
  border-radius: 5px;
  font-size: 16px;
}

button:hover {
  background-color: #005bb5;
}
