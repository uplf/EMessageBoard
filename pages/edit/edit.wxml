<!--pages/edit/edit.wxml-->
<text>editpage</text>
<view>
<text>welcome</text>
<view>
    <form catchsubmit="formSubmit" catchreset="formReset"  bind:tap="formChange">\
    <text>基础信息</text>
    <view class="input">
        <text>主题</text>
              <input class="weui-input" name="input" placeholder="输入主题" />
    </view>

    <view>
    <view class="section">
        <picker bindchange="mescate_change" value="{{mescate_index}}" range="{{mescate_array}}">
            处理方式: {{mescate_array[mescate_index]}}
        </picker>
    </view>

    <view>
        <picker wx:if="{{mescate_index==0}}" bindchange="department_change" value="{{department_index}}" range="{{department_array}}">
            发送部门: {{department_array[department_index]}}
        </picker>
    </view>

    <view class="tiny_check">
        <view wx:for="{{mes_data.solution}}" wx:key="item">
        <text>{{item.department}} </text>
            <text>{{department_array[item.department]}}->{{proc_unit_expl[item.cate_unit-1]}}</text>
            <text></text>
        </view>
    </view>

    </view>

    <view class="label">
    <checkbox-group>
        <label>
            <checkbox  value="实名（使用本人认证的邮箱提交）"  checked="{{mes_data.realname.check}}">
            实名
            </checkbox>
            <view></view>
            <checkbox  value="实名（使用本人认证的邮箱提交）"  checked="{{mes_data.reuse}}">
            允许用作学代会建议
            </checkbox>
            <view></view>
            <checkbox  value="实名（使用本人认证的邮箱提交）"  checked="{{mes_data.public}}">
            公开
            </checkbox>
        </label>
    </checkbox-group>
    </view>

    </form>
</view>
</view>