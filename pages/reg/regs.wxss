/* pages/reg/regs.wxss */
.picker {
  font-size: 20px;
  margin-bottom: 15px;
  padding: 10px;
  background-color: #ffffff;
  border-radius: 8px;
  box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
}

.weui-input{
  width: 100%;
  padding: 10px;
  border: 1px solid #ccc;
  border-radius: 5px;
  font-size: 14px;
  background-color: #fff;
  height: 40px;
}
.input-field {
  width: 100%;
  padding: 10px;
  border: 1px solid #ccc;
  border-radius: 5px;
  font-size: 14px;
  background-color: #fff;
  height: 40px;
}
.input-placeholder {
  color: #999; /* 灰色提示文字 */
  font-size: 13px;
  text-align: center; /* 居中对齐提示文字 */
  line-height: 40px;  /* 垂直居中对齐提示文字 */
}
.section-title {
  font-size: 20px;
}